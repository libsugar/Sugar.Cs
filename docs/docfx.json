{
  "metadata": [
    {
      "src": [
        {
          "files": ["LibSugar.csproj"],
          "exclude": ["**/bin/**", "**/obj/**"],
          "src": "../LibSugar"
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["api/**.yml", "api/index.md"]
      },
      {
        "files": ["articles/**.md", "articles/**/toc.yml", "toc.yml", "*.md"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "overwrite": [
      {
        "files": ["apidoc/**.md"],
        "exclude": ["obj/**", "site/**"]
      }
    ],
    "dest": "site",
    "globalMetadata": {
      "_appTitle": "LibSugar",
      "_appFooter": "<span>Copyright Â© <a href=\"https://github.com/libsugar/SugarCs\">LibSugar</a>.<br>Generated by <strong><a href=\"https://github.com/dotnet/docfx\">DocFX</a></strong></span>",
      "_appFaviconPath": "images/logo.png",
      "_appLogoPath": "images/logo.png",
      "_enableSearch": true
    },
    "sitemap": {}
  }
}
